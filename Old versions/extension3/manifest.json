{
  "manifest_version": 3,
  "name": "autotyper",
  "title": "AutoTyper",
  "version": "2.0",
  "description": "AutoTyper extension for automating text input.",
  "author": "Mamvik",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "autotyper@local"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["click.wav"],
      "matches": ["<all_urls>"]
    }
  ]
}
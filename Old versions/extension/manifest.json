{
  "manifest_version": 3,
  "name": "AutoTyper",
  "version": "1.0",
  "description": "AutoTyper extension for automating text input.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "applications": {
  "gecko": {
    "id": "autotyper@local"
  }
}
}
